# PDVWeb C1 Environment Configuration
# Copy to .env.local in both apps/backend and apps/frontend

# ===== DATABASE =====
DB_HOST=db
DB_PORT=3306
DB_NAME=pdvweb_c1
DB_USER=pdvweb
DB_PASSWORD=pdvweb_secure_pass
DB_ROOT_PASSWORD=root_secure_password

# ===== SERVER =====
NODE_ENV=development
PORT=3001
BACKEND_PORT=3001
FRONTEND_PORT=3000
HOST=0.0.0.0

# ===== CORS & SECURITY =====
CORS_ORIGIN=http://localhost:3000
JWT_SECRET=pdvweb_c1_super_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===== REDIS =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ===== FRONTEND CONFIG =====
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_API_WS=ws://localhost:3001
NEXT_PUBLIC_APP_NAME=PDVWeb C1
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===== API CONFIG =====
API_VERSION=v1
API_PREFIX=/api/v1
LOG_LEVEL=debug

# ===== EMAIL (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@pdvweb-c1.com

# ===== PAYMENT (Optional) =====
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# ===== SYSTEM =====
TIMEZONE=America/Sao_Paulo
LANGUAGE=pt-BR
CURRENCY=BRL
